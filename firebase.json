{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "!**/*.{js,css,jpg,png,gif,svg,ico}",
        "destination": "/index.html"
      }
    ]
  }
}